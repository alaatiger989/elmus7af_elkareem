<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    card_view:cardCornerRadius="6dp"
    card_view:cardBackgroundColor="@android:color/transparent"
    android:layout_margin="10dp"
    android:id="@+id/card_sourah"
    android:layout_marginBottom="5dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        >
        <ImageView
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/maadani"
            android:id="@+id/sourah_img_type"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true" />
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:layout_marginStart="15dp"
            android:layout_marginLeft="15dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="El-Kahf"
                android:textStyle="bold"
                android:textSize="16sp"
                android:textColor="#B0BEC5"
                android:id="@+id/sourah_name"
                />
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_below="@id/sourah_name"
                >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Maadni"
                    android:textSize="13sp"
                    android:textColor="#B0BEC5"
                    android:id="@+id/sourah_type"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="286 Verses"
                    android:textSize="16sp"
                    android:textColor="#B0BEC5"
                    android:layout_marginStart="15dp"
                    android:id="@+id/sourah_verses"
                    android:layout_marginLeft="15dp" />
            </LinearLayout>


        </RelativeLayout>



    </LinearLayout>
</androidx.cardview.widget.CardView>