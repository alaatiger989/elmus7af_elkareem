<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFC400"
    tools:context=".SplashScreen.View.MainActivity">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/quran_logo2"
        android:layout_centerInParent="true"
        android:id="@+id/quran_logo2"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/aga_arabic"
        android:textColor="#056834"
        android:text="المصحف الكريم"
        android:layout_below="@id/quran_logo2"
        android:textSize="20sp"
        android:textStyle="bold"
        android:layout_centerInParent="true"
        android:id="@+id/textLogo"
        />

</RelativeLayout>